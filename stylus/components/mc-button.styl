.mc-button
	display inline-block
	margin 0.5rem auto
	padding 0.5rem 1rem
	background gris-claro
	border none
	color white
	cursor pointer
	text-align center
	letter-spacing 0.5px
	border-radius radio
	
	&-square
		width 5%
		font-size 1rem

	&-xs
		min-width 20%
		font-size 1rem
				
	&-sm
		min-width 40%
		font-size 1.1rem
		
	&-md
		min-width 70%
		font-size 1.2rem
		
	&-lg
		min-width 90%
		font-size 1.3rem

	&-block
		display block
		max-width 100%
		padding 0.5rem
		font-size 1.4rem
		
	&-success
		background verde
				
	&-info
		background azul
				
	&-danger
		background rojo
				
	&-warning
		background naranja
				
	&-phantom
		background gris-claro
		
	&-link
		background none
		display inline-block
		color azul
		text-decoration underline
		width initial
		

@media screen and (min-width:768px)
	.mc-button
		
		&-xs
			width 10%

		&-sm
			width 20%
			
		&-md
			width 40%

		&-lg
			width 60%
			