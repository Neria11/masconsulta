.form
	padding 0
	margin 0 auto
	text-align center
	
	&-group
		display block
		padding 0.2rem 0
		margin 0 auto
		
		.tag
			font-size 1rem
			display block
			margin 0.3rem auto
			text-align center
			

		.control[type="file"]
			border none
			
		textarea.control
			resize none
			min-height 120px
		
		.control
			padding 0.5rem
			box-sizing border-box
			border-width 1px 1px 2px 1px 
			border-style solid 
			border-color gray
			font-weight normal
			border-radius radio
			background #f1f1f1
			display block
			width 100%
			
			&-inline
				display inline-block
			
			&-xs
				/*width 20%*/
				font-size 1rem
						
			&-sm
				/*width 40%*/
				font-size 1.1rem
				
			&-md
				/*width 70%*/
				font-size 1.2rem
				
			&-lg
				/*width 90%*/
				font-size 1.3rem
				
			&-block
				display block
				width 100%
				padding 0.5rem
				font-size 1.2rem
				margin 0.5rem auto
				box-sizing border-box
				
			&:focus
				outline none
				border-color azul
				box-shadow none
				background #FAFFBD
				
			&:disabled:hover
				cursor not-allowed
				
				
		input[type="radio"]
		input[type="checkbox"]
			display none
			
		input[type="radio"] + label
		input[type="checkbox"] + label
			font-size 1rem
			display block 
			margin 1rem auto
			cursor pointer
			
		input[type="radio"] + label span
		input[type="checkbox"] + label span
			display inline-block
			width 50px
			height 50px
			cursor pointer
			margin 0.2rem
			vertical-align middle
			border-radius 50%
			background gris-oscuro
		
		input[type="checkbox"] + label span
			border-radius 0
			background white
			border 1px solid #d3d3d3

		input[type="radio"]:checked + label span
		input[type="checkbox"]:checked + label span
			background-color azul

		input[type="radio"] + label span,
		input[type="radio"]:checked + label span
			transition background-color 0.1s ease

