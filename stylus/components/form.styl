.searcher
	width 100%
	overflow hidden
	background white
	height 50px
	margin 0.5rem auto
	border-radius radio
	
	&-input
		padding 0.5rem
		border 0
		width 100%
		font-size 1.4rem
		height 50px
		outline none
		background gris-claro
		box-sizing border-box
		border 1px solid color-border
		
		&:focus
			background #FAFFBD
		
	&-button
		background azul
		border none
		cursor pointer
		height 50px
		outline none
		padding 0.5rem
		text-align center
		width 100%
		
		span
			color white
			vertical-align middle
			display block
				
.fixed-on-scroll
	position fixed
	left 0
	right 0
	top 70px
				
.autocompletado
	background white
	border-color gray
	border-style solid
	border-width 0 1px 1px 1px
	box-sizing border-box
	height 250px
	margin 0 auto
	overflow auto
	padding 0
	position absolute
	width 100%
	left 0
	right 0
	z-index 10
	
	.suggest-element
		list-style none
		/*margin 0.5rem*/
		padding 0.5rem
		cursor pointer
		display block
		border-bottom 1px solid gris
		text-align left
		font-size 0.9rem
		@extends .word-truncate
		
		&:hover
			background verde
			color white

@media screen and (min-width:768px)
	.form
		text-align initial
		padding 0.5rem 0
		
		&-group		
		
			.tag
				font-size 1.1rem
				text-align left
				margin 0.4rem 0
			
			.control
						
				&-xs
					width 10%
					
				&-sm
					width 20%
					
				&-md
					width 40%
					
				&-lg
					width 80%
					
			input[type="radio"] + label span
				width 40px
				height 40px
					
	/*.search-container
		padding 0.5rem 1rem*/
		
	.searcher
		width 50%
		text-align left
			
