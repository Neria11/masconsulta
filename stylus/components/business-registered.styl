.business-registered
	background white
	padding 0 0 0.5rem 0
	position relative
	width 100%
	margin 1rem auto
	text-align center
	border 1px solid #d3d3d3
	
	&-image
		width 100%
		margin 0 auto
		padding 0
		position relative
		
		.background
			width 100%

		.logo
			border-radius 50%
			width 90px
			height 90px
			margin 0 auto
			position absolute
			bottom -3rem
			left 0
			right 0
			border 5px solid gris-claro
			background white
			
			img 
				max-width 100%
			
	&-heading
		margin 0 auto
		padding 0.5rem
		text-align center
		
		.name
			font-size 1.3rem
			text-transform uppercase
			margin 3rem auto 0.5rem auto
			

	&-actions
		padding 0
		margin 0 auto
		text-align center


@media screen and (min-width:768px)
	.business-registered
		width 90%
		margin 1rem