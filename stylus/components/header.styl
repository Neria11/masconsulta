.header
	height 60px
	background #363636
	width 100%
	position relative
	z-index 1
	text-align center
	float left
	box-shadow 0 1px 5px rgba(black,0.4)
	z-index 10
	
	&-logo
		margin 0
		position relative
		display inline-block
		height 60px
		left 0
		float left
		
		img
			max-width 100%
			height 100%
		
	.toogle-menu
		width 60px
		height 60px
		display table
		float right 
		background rojo
		text-align center
		font-size 2rem
		font-weight bold
		cursor pointer
		
		span
			display table-cell
			vertical-align middle
			color white
			
#with-icon-panel
	left 60px

@media screen and (min-width:768px)
	.header
		text-align initial
		box-shadow 0 1px 5px rgba(black,0.1)
		
		.toogle-menu
			display none
