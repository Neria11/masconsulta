.header
	height 70px
	background amarillo
	width 100%
	position relative
	z-index 5
	text-align center
	z-index 10
	
	&-logo
		margin 0.3rem 0.5rem
		height 70px
		display inline-block
		height 60px
		width 110px
		position relative
		background url("../img/logo-desktop.png")
		background-size cover
		text-align center
		
	.toogle-menu
		width 70px
		height 70px
		display table
		float right 
		background #363636
		text-align center
		font-size 2rem
		font-weight bold
		cursor pointer
		
		span
			display table-cell
			vertical-align middle
			color white
			

@media screen and (min-width:768px)
	.header
		text-align initial
		box-shadow 0 1px 5px rgba(black,0.1)
		
		.toogle-menu
			display none
		
		&-logo
			width 240px
			height 65px
			margin 0.1rem 0.5rem