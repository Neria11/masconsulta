.presentation
	background white
	padding 0 0 0.5rem 0
	position relative
	width 100%
	margin-bottom 1rem
	border-bottom 1px solid #d3d3d3
	
	&-image
		width 100%
		margin 0 auto
		padding 0
		position relative
		
		.background
			max-width 100%

		.logo
			border-radius 50%
			width 90px
			height 90px
			margin 0 auto
			position absolute
			bottom -3rem
			left 0
			right 0
			border 5px solid gris-claro
			background white
			padding 0.5rem
			
			img 
				max-width 100%
			
	&-heading
		margin 1rem auto 0 auto
		padding 0.5rem
		text-align center
		
		.name
			font-size 1.8rem
			margin 1.5rem auto 0.5rem auto
			
		.category
			text-align left
			margin 0.5rem auto

@media screen and (min-width:768px)
	.presentation
		height 100%
		width 320px
		position fixed
		left 0
		top 60px
		bottom 0
		padding-bottom 1rem
		border-right 1px solid #d3d3d3
		overflow scroll
		overflow-y hidden
		overflow-x hidden
		
		&:hover
			overflow-y visible
