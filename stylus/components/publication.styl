.publication
	background white
	border-style solid
	border-width 1px 
	border-color color-border
	height auto
	padding 0
	margin 1rem auto
	display block
	vertical-align top
	max-width 100%
	position relative
	z-index 3
	overflow hidden
	
	&-header
		overflow hidden
		display block
		padding 0.5rem
		height 50px
		
		.logo
			width 48px
			height 48px
			display inline-block
			float left
			margin 0
			padding-right 1rem
			
			img 
				max-width 100%
				border-radius 50%
				vertical-align top

		.p-title
			font-size 1rem
			text-align left
			margin 0
			font-weight bold
			display block
			@extends .word-truncate
			
		.p-nick
			font-size 0.9rem
			display inline-block
			font-style italic
			color #a4a4a4
			display block
			float left
			left 0
			
	&-body	
		margin 0.5rem auto
		background white
		text-align center

		.video
			height 0px
			margin 0px auto
			padding-bottom 56.25%
			position relative
			padding-top 0.1rem
			z-index 14
			
			embed, 
			iframe, 
			object, 
			video
				height 100%
				left 0px
				position absolute
				top 0px
				width 100%
				z-index 15
				border 0
				padding 0

		.image
			overflow hidden
			margin 0 auto
			width 100%
			font-size 0
			cursor zoom-in
			
			img 
				max-width 100%
				

		.text
			padding 0 0.5rem
			
			p
				font-size 1rem !important 
				text-align justify
				font-weight 500
				
				a 
					color azul
					text-decoration underline
					

	&-footer		
		overflow hidden
		position relative
		margin-bottom 0
		padding 0.5rem
		height 40px
		line-height 40px
		

		.date
			font-style italic
			color gris
			float left
			font-size 0.8rem
			padding 0 0.5rem
			
		.actions
			float right
			text-align left
			
			.like
				background rgba(azul,0.8)
				float left
				width 40px
				height 40px
				display table
				border-radius 50%
				margin 0 0.5rem
				cursor pointer
				
				span 
					color white
					display table-cell
					vertical-align middle
					text-align center
			


@media screen and (min-width:768px)
	.publications
		padding 0.5rem 1rem
		overflow auto
		margin-left 325px
		
	.publication
		border-radius radio
		margin 0.5rem auto 
		border 1px solid color-border
		/*min-height 265px*/
		margin 0.5rem
		max-width 100%
		
		&-header
			
			.p-title
				font-size 1.1rem
